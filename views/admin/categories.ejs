<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <title>Categories &laquo; Admin</title>
  <%- include('./layout/admin_header-resource.ejs');%>
</head>
<body>
  <script>NProgress.start()</script>

  <div class="main">
   <%- include('./layout/admin_navbar.ejs');%>
    <div class="container-fluid">
      <div class="page-title">
        <h1>分类目录</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger tips" style="display:none">
        <strong>提示！</strong> <span></span>
      </div>
      <div class="row">
        <div class="col-md-4">
          <form id="addForm">
            <h2>添加新分类目录</h2>
            <div class="form-group">
              <input type="hidden" name="id" id='id'>
              <label for="name">名称</label>
              <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
            </div>
            <div class="form-group">
              <label for="slug">别名</label>
              <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
              <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
            </div>
            <div class="form-group">
              <input type="button" value='添加' class="btn btn-primary btn-add">
              <input type="button" value="编辑" class="btn btn-primary btn-edit" style="display:none" >
            </div>
          </form>
        </div>
        <div class="col-md-8">
          <div class="page-action">
            <!-- show when multiple checked -->
            <a class="btn btn-danger btn-sm deletAllchecked" href="javascript:;" style="display: none ; width: 200px">批量删除</a>
          </div>
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center" width="40"><input type="checkbox" class="checkeAll"></th>
                <th>名称</th>
                <th>Slug</th>
                <th class="text-center" width="100">操作</th>
              </tr>
            </thead>
            <tbody>
              <script type="text/template" id="categoryTemplate">
                {{each data as value index}}
                <tr>
                <td class="text-center"><input type="checkbox" class='checkSingle' data-id='{{value.id}}'></td>
                <td>{{value.name}}</td>
                <td>{{value.slug}}</td>
                <td class="text-center">
                  <a href="javascript:;" class="btn btn-info btn-xs btnEdit" 
                  data-id='{{value.id}}' data-name='{{value.name}}' data-slug='{{value.slug}}'>编辑</a>
                  <a href="javascript:;" class="btn btn-danger btn-xs btn-del" data-id='{{value.id}}'>删除</a>
                </td>
              </tr>
              {{/each}}
              </script>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('./layout/admin_aside.ejs');%>
 <%- include('./layout/amin_footer.ejs');%>

 <script src="../assets/vendors/template/template.js"></script>
 <script src="../assets/js/admin-categories.js"></script>